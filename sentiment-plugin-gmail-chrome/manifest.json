{
  	"name": "Sentiment Gmail",
  	"version": "0.1",
  	"description": "Sentiment analyser for gmail",
  	"content_scripts": [
    	{
      		"matches": ["https://mail.google.com/*"],
      		"js": ["content.js"]
    	}
  	],
  	"web_accessible_resources": [
    	"jquery-1.10.2.min.js",
    	"gmail.js",
    	"main.js"
  	],
	"permissions": ["http://*/*", "https://*/*"
  	],
  	"manifest_version": 2
}
